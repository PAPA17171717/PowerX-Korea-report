        function getTranslation(key, lang = currentLanguage) {
            if (translations[key] && translations[key][lang]) {
                return translations[key][lang];
            }
            if (translations[key] && translations[key]['ja']) return translations[key]['ja'];
            if (translations[key] && translations[key]['en']) return translations[key]['en'];
            return key; 
        }
        
        function showPopup(titleKey, contentHtml) {
            document.getElementById('popupTitle').innerHTML = getTranslation(titleKey); 
            document.getElementById('popupContent').innerHTML = contentHtml;
            document.getElementById('popupContainer').classList.remove('hidden');
        }

        function closePopup() {
            document.getElementById('popupContainer').classList.add('hidden');
            document.getElementById('popupContent').innerHTML = ''; 
        }

        async function fetchGeminiApiResponse(prompt, originalButton) {
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
            const payload = {
                contents: [{ role: "user", parts: [{ text: prompt }] }]
            };

            let originalButtonContent = originalButton.innerHTML; 
            originalButton.innerHTML = `<div class="loading-spinner" style="width:1.25rem; height:1.25rem; border-width:2px; margin-right:0.5rem; display:inline-block;"></div> ${getTranslation('loading_text')}`;
            originalButton.disabled = true;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                if (!response.ok) {
                    console.error("API Error Response:", await response.text());
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const result = await response.json();
                
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    return result.candidates[0].content.parts[0].text;
                } else {
                    console.error("Unexpected API response structure:", result);
                    return getTranslation('error_fetch_text');
                }
            } catch (error) {
                console.error("Error fetching Gemini API response:", error);
                return getTranslation('error_fetch_text');
            } finally {
                originalButton.innerHTML = originalButtonContent; 
                originalButton.disabled = false;
                const textSpan = originalButton.querySelector('span[data-lang-key]'); 
                if (textSpan) {
                    const translationKey = textSpan.getAttribute('data-lang-key');
                    textSpan.innerHTML = getTranslation(translationKey); 
                }
            }
        }

        async function predictPCSTrends() {
            const predictButton = document.getElementById('predictTrendButton');
            showPopup('popup_title_trend', '<div class="loading-spinner"></div>');

            const danfossInfoJa = `Danfoss (iC7シリーズ): 主な冷却方式: 液体冷却, 設計思想: モジュール設計, 最大DC電圧: 1500V対応開発中, 特筆すべき技術: 実績ある液体冷却、船舶認証, 今後の開発動向: ラック型インバーター`;
            const destinInfoJa = `Destin Power (SAVEENシリーズ): 主な冷却方式: 液浸冷却, 設計思想: 高環境耐性 (IP65+), 最大DC電圧: 1500V DC, 特筆すべき技術: 革新的液浸冷却、ディレーティングなし運転, 今後の開発動向: SAVEEN IM 4000 (2025年商用化)`;
            const danfossInfoEn = `Danfoss (iC7 Series): Main Cooling: Liquid Cooling, Design: Modular, Max DC Voltage: 1500V dev, Noteworthy: Proven liquid cooling, Marine cert, Future: Rack-type`;
            const destinInfoEn = `Destin Power (SAVEEN Series): Main Cooling: Immersion Cooling, Design: High env resistance (IP65+), Max DC Voltage: 1500V DC, Noteworthy: Innovative immersion cooling, No derating, Future: SAVEEN IM 4000 (2025 commercial)`;

            const promptJa = `以下のPCS技術情報に基づいて、今後のパワーコンディショナ市場における主要な技術トレンドを3つ予測し、それぞれ簡潔に説明してください。\n\nDanfoss社:\n${danfossInfoJa}\n\nDestin Power社:\n${destinInfoJa}`;
            const promptEn = `Based on the following PCS technology information, predict three major technology trends in the future power conditioner market and briefly explain each.\n\nDanfoss:\n${danfossInfoEn}\n\nDestin Power:\n${destinInfoEn}`;
            
            const prompt = (currentLanguage === 'ja') ? promptJa : promptEn;
            
            const resultText = await fetchGeminiApiResponse(prompt, predictButton);
            document.getElementById('popupContent').innerHTML = `<p>${resultText.replace(/\n/g, '<br>')}</p>`;
        }

        async function explainTerm(termJa, termEn) {
            const term = (currentLanguage === 'ja') ? termJa : termEn;
            // const explainButton = event.currentTarget; // No longer needed as button is passed if required by fetchGeminiApiResponse

            showPopup('popup_title_explain', '<div class="loading-spinner"></div>');
            
            const promptJa = `パワーコンディショナ技術における「${termJa}」とは何か、初心者にも分かりやすく、重要なポイントを強調して150字以内で説明してください。`;
            const promptEn = `What is "${termEn}" in power conditioner technology? Explain it concisely for a beginner in about 70 words, highlighting key points.`;
            const prompt = (currentLanguage === 'ja') ? promptJa : promptEn;

            // Pass a dummy button or null if originalButton is not strictly needed by fetchGeminiApiResponse for this call
            const resultText = await fetchGeminiApiResponse(prompt, document.createElement('button')); // Dummy button
            document.getElementById('popupContent').innerHTML = `<p>${resultText.replace(/\n/g, '<br>')}</p>`;
        }

        function applyTranslation(el) {
            const key = el.getAttribute('data-lang-key');
            if (key) {
                const translatedText = getTranslation(key);
                if (el.tagName === 'IMG') { 
                    el.alt = translatedText;
                } else {
                    el.innerHTML = translatedText;
                }
            } else { 
                let text = el.getAttribute(`data-lang-${currentLanguage}`);
                 if (el.classList.contains('conversation-info') && el.tagName === 'P') {
                    const prefixKey = el.textContent.includes(getTranslation("co_skenmove_note_prefix", "ja")) || el.textContent.includes(getTranslation("co_skenmove_note_prefix", "en")) ||  (el.dataset.langJa && (el.dataset.langJa.includes(getTranslation("co_skenmove_note_prefix","ja")) || el.dataset.langEn.includes(getTranslation("co_skenmove_note_prefix","en")))) ? "co_skenmove_note_prefix" : (el.textContent.includes(getTranslation("benchmark_graph_note_prefix_usd", "ja")) || el.textContent.includes(getTranslation("benchmark_graph_note_prefix_usd", "en")) || (el.dataset.langJa && (el.dataset.langJa.includes(getTranslation("benchmark_graph_note_prefix_usd","ja")) || el.dataset.langEn.includes(getTranslation("benchmark_graph_note_prefix_usd","en")))) ? "benchmark_graph_note_prefix_usd" : "info_prefix");
                    const currentPrefix = getTranslation(prefixKey, currentLanguage);
                    let contentText = text;
                    
                    const jaPrefixPattern = new RegExp(`^<strong>${getTranslation(prefixKey, "ja")}</strong>\\s*`);
                    const enPrefixPattern = new RegExp(`^<strong>${getTranslation(prefixKey, "en")}</strong>\\s*`);
                    
                    if (jaPrefixPattern.test(text)) {
                        contentText = text.replace(jaPrefixPattern, "");
                    } else if (enPrefixPattern.test(text)) {
                        contentText = text.replace(enPrefixPattern, "");
                    } else if (text.startsWith(getTranslation(prefixKey, "ja"))) {
                         contentText = text.substring(getTranslation(prefixKey, "ja").length).trim();
                    } else if (text.startsWith(getTranslation(prefixKey, "en"))) {
                         contentText = text.substring(getTranslation(prefixKey, "en").length).trim();
                    }
                     el.innerHTML = `<strong>${currentPrefix}</strong> ${contentText}`;
                } else if (el.closest('.conversation-info') && el.tagName === 'STRONG') { 
                     const parentP = el.closest('p');
                     let prefixKeyToUse = "info_prefix"; 
                     if (parentP) {
                         const pJaText = parentP.dataset.langJa || "";
                         const pEnText = parentP.dataset.langEn || "";
                         if (pJaText.includes(getTranslation("co_skenmove_note_prefix","ja")) || pEnText.includes(getTranslation("co_skenmove_note_prefix","en")) ) {
                            prefixKeyToUse = "co_skenmove_note_prefix";
                         } else if (pJaText.includes(getTranslation("benchmark_graph_note_prefix_usd","ja")) || pEnText.includes(getTranslation("benchmark_graph_note_prefix_usd","en")) ) {
                            prefixKeyToUse = "benchmark_graph_note_prefix_usd";
                         }
                     }
                     el.textContent = getTranslation(prefixKeyToUse, currentLanguage);
                }
                else if (text) {
                     el.innerHTML = text;
                }
            }
        }


        function switchLanguage(lang) {
            currentLanguage = lang;
            document.documentElement.lang = lang;

            document.getElementById('lang-ja').classList.toggle('active', lang === 'ja');
            document.getElementById('lang-en').classList.toggle('active', lang === 'en');

            const elements = document.querySelectorAll('[data-lang-key], [data-lang-ja], [data-lang-en]');
            elements.forEach(el => {
                applyTranslation(el);
            });
            if (!document.getElementById('popupContainer').classList.contains('hidden')) {
                const currentPopupTitleEl = document.getElementById('popupTitle');
                 if (currentPopupTitleEl.innerHTML.includes(getTranslation('popup_title_trend', 'ja')) || currentPopupTitleEl.innerHTML.includes(getTranslation('popup_title_trend', 'en'))) { 
                    currentPopupTitleEl.innerHTML = getTranslation('popup_title_trend');
                } else if (currentPopupTitleEl.innerHTML.includes(getTranslation('popup_title_explain', 'ja')) || currentPopupTitleEl.innerHTML.includes(getTranslation('popup_title_explain', 'en'))) {
                    currentPopupTitleEl.innerHTML = getTranslation('popup_title_explain');
                }
            }
        }

        function openTab(event, tabName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tab-content");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }

            tablinks = document.getElementsByClassName("tab-button");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }

            document.getElementById(tabName).style.display = "block";
            event.currentTarget.className += " active";
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            // Initial tab setup
            document.getElementById('company_overview').style.display = 'block';
            document.getElementById('danfoss').style.display = 'none';
            document.getElementById('destin').style.display = 'none';
            document.getElementById('comparison').style.display = 'none';
            document.getElementById('benchmark_graph').style.display = 'none'; 
            document.getElementById('summary').style.display = 'none';

            const tabButtons = document.querySelectorAll('.tab-button');
            if (tabButtons.length > 0) {
                tabButtons.forEach(btn => btn.classList.remove('active'));
                 document.querySelector('.tab-button[data-tab-target="company_overview"]').classList.add('active');
            }
            
            // Tab button event listeners
            tabButtons.forEach(button => {
                button.addEventListener('click', (event) => {
                    openTab(event, button.dataset.tabTarget);
                });
            });

            // Language switch event listeners
            document.getElementById('lang-ja').addEventListener('click', () => switchLanguage('ja'));
            document.getElementById('lang-en').addEventListener('click', () => switchLanguage('en'));

            // Accordion event listeners
            const accordionButtons = document.querySelectorAll('.accordion-button');
            accordionButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const content = button.nextElementSibling;
                    button.classList.toggle('open');
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                    } else {
                        content.style.maxHeight = content.scrollHeight + "px";
                    }
                });
            });

            // Term explanation button event listeners
            document.querySelectorAll('.term-explain-button').forEach(button => {
                button.addEventListener('click', (event) => {
                    const termJa = button.dataset.termJa;
                    const termEn = button.dataset.termEn;
                    explainTerm(termJa, termEn);
                });
            });
            
            // Predict trends button event listener
            const predictBtn = document.getElementById('predictTrendButton');
            if(predictBtn) {
                predictBtn.addEventListener('click', predictPCSTrends);
            }

            // Popup close button event listener
            const popupCloseBtn = document.getElementById('popup-close-btn');
            if(popupCloseBtn) {
                popupCloseBtn.addEventListener('click', closePopup);
            }
            const popupOverlayEl = document.getElementById('popup-overlay-el');
            if(popupOverlayEl) {
                popupOverlayEl.addEventListener('click', closePopup);
            }

            // Initial language application
            switchLanguage(currentLanguage); 
        });
    </script>
</body>
</html>
